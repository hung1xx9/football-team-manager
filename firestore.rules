rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Shared public team data
    match /teams/primary {
      allow read: if true;
      allow write: if request.auth != null; // Allow any authenticated user (including anonymous)
    }
    
    // Legacy user-specific data (for migration/backup)
    match /teams/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule: deny all others
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
